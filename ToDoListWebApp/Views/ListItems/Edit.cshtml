@model ToDoListWebApp.Models.ListItem

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ListItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="CreateDateTime" />
            </div>
            <div class="form-group">
                <label asp-for="LimitDateTime" class="control-label"></label>
                <input asp-for="LimitDateTime" class="form-control" />
                <span asp-validation-for="LimitDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="UpdateDateTime" />
                <input type="hidden" asp-for="ToDoListId" />
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsChecked" /> @Html.DisplayNameFor(model => model.IsChecked)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-area="" asp-controller="ToDoLists" asp-action="Details" asp-route-toDoListId="@Model.ToDoListId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
